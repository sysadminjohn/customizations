// ~/.config/Code/User/settings.json
// for a quick edit of amount of darkness or relieve some contrast if too harsh, replace all #090909 occurrences with something like #141414 or use the color picker preview

{
    "window.titleBarStyle": "custom",
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.colorTheme": "Default Dark+ Experimental",
    "telemetry.telemetryLevel": "off",
    "explorer.confirmDelete": false,
    "workbench.colorCustomizations": {
            "tab.activeBackground": "#151515",
            "tab.inactiveBackground": "#090909",
            "titleBar.activeBackground": "#090909",
            "titleBar.inactiveBackground": "#090909",
            "sideBar.background": "#090909",
            "activityBar.background": "#090909",
            "statusBar.background": "#090909",
            "editor.foreground": "#11e27a",
            "editor.background": "#090909",
    },
    "editor.tokenColorCustomizations": {
        "functions": "#00ce45",
        "variables": "#1db889",
        "comments": "#888888",
        "types": "#b7ff58",
        "keywords": "#34ffb1",
    }
}
